{% extends "::base.html.twig" %}

{% block body %}

<h2>Liste des projets :</h2>
<a href="{{ path('projects_add') }}" class="update">Ajouter un projet</a>

{% if  projects %}
	<ul>
		{% for project in projects %}
			<li>
				<p><a href="{{ path('projects_one_project', {'id': project.idProjects} ) }}">{{project.name}}</a></p>
			</li>
			
		{% endfor %}
	</ul>
{% endif %}

{% endblock %}


