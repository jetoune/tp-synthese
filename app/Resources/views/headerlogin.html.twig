<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <!-- css -->
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/Imie/css/styles.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('bundles/Imie/css/responsive.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="container">
            <!-- header -->
            <div id="header">
                <!-- logo -->
                <div id="logo"></div>
                <!-- title --> 
                <div id="projectTitle">
                    Projets de l'I.M.I.E.
                </div>
                <!-- user's space -->
            </div>
            <div id="content">
                <div id="main-container">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>                
    </body>
</html>